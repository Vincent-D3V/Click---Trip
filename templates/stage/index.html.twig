{% extends 'base.html.twig' %}

{% block title %}Stage index{% endblock %}
{% block stylesheet %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    {{ encore_entry_link_tags('stageIndex') }}
{% endblock %}

{% block body %}
    <h1 id="padding-for-navbar">Stage index</h1>

    <a href="{{ path('stage_new') }}">Create new</a>

    <table class="table">
        <thead>
            <tr>
                <th>Id
                    <a href="{{ path('stage_index', {'sortField': 'id', 'sortDirection': 'ASC'}) }}">
                        <i class="far fa-sort"></i>
                    </a>
                </th>
                <th>Validate</th>
                <th>Destination</th>
                <th>Reference
                    <a href="{{ path('stage_index', {'sortField': 'reference', 'sortDirection': 'ASC'}) }}">
                        <i class="far fa-sort"></i>
                    </a>
                </th>
                <th>NameStage
                    <a href="{{ path('stage_index', {'sortField': 'nameStage', 'sortDirection': 'ASC'}) }}">
                        <i class="far fa-sort"></i>
                    </a>
                </th>
                <th>Duration
                    <a href="{{ path('stage_index', {'sortField': 'duration', 'sortDirection': 'ASC'}) }}">
                        <i class="far fa-sort"></i>
                    </a>
                </th>
                <th>Deleted</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stage in stages %}
            <tr>
                <td>{{ stage.id }}</td>
                <td>{{ stage.validate ? 'Yes' : 'No' }}</td>
                <td>{{ stage.destination }}</td>
                <td>{{ stage.reference }}</td>
                <td>{{ stage.nameStage }}</td>
                <td>{{ stage.duration }}</td>
                <td>{{ stage.deleted ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('stage_show', {'id': stage.id}) }}">show</a>
                    <a href="{{ path('stage_edit', {'id': stage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% block javascript %}
<script src="https://kit.fontawesome.com/f62deca48c.js"></script>
{% endblock %}
