{% extends 'base.html.twig' %}

{% block title %}Stage index{% endblock %}

{% block body %}
    <h1>Stage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Validate</th>
                <th>Destination</th>
                <th>Reference</th>
                <th>NameStage</th>
                <th>Duration</th>
                <th>Deleted</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stage in stages %}
            <tr>
                <td>{{ stage.id }}</td>
                <td>{{ stage.validate ? 'Yes' : 'No' }}</td>
                <td>{{ stage.destination }}</td>
                <td>{{ stage.reference }}</td>
                <td>{{ stage.nameStage }}</td>
                <td>{{ stage.duration }}</td>
                <td>{{ stage.deleted ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('stage_show', {'id': stage.id}) }}">show</a>
                    <a href="{{ path('stage_edit', {'id': stage.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('stage_new') }}">Create new</a>
{% endblock %}
