{% extends 'base.html.twig' %}

{% block title %}Stage{% endblock %}
{% block stylesheet %}
{% endblock %}

{% block body %}
    <h1 id="padding-for-navbar">Stage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stage.id }}</td>
            </tr>
            <tr>
                <th>Validate</th>
                <td>{{ stage.validate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ stage.destination }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ stage.reference }}</td>
            </tr>
            <tr>
                <th>NameStage</th>
                <td>{{ stage.nameStage }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ stage.duration }}</td>
            </tr>
            <tr>
                <table class="prices">
                    <thead>
                        <tr>Prix</tr>
                        {# <tr>2 pers</tr>
                        <tr>4 pers</tr>
                        <tr>6 pers</tr>
                        <tr>8 pers</tr>
                        <tr>10 pers</tr> #}
                        <tr>check twig</tr>
                    </thead>
                    <tbody>
                        {% for price in stage.prices %}
                        {# <tr>Du {{ price.dateBegin }} au {{ price.dateEnd }}</tr> #}
                        <tr>{{ price.dateBegin }} {{ price.dateEnd }}</tr>
                            {# {% if price.persons == 2 %} #}
                                <tr>{{ price.price }}</tr>
                            {# {% endif %} #}
                        {% endfor %}
                    </tbody>
                </table>
            </tr>
            <tr>
                <th>Deleted</th>
                <td>{{ stage.deleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('stage_index') }}">back to list</a>

    <a href="{{ path('stage_edit', {'id': stage.id}) }}">edit</a>

    {{ include('stage/_delete_form.html.twig') }}
{% endblock %}
