    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stage.id }}</td>
            </tr>
            <tr>
                <th>Validate</th>
                <td>{{ stage.validate ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ stage.destination }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ stage.reference }}</td>
            </tr>
            <tr>
                <th>NameStage</th>
                <td>{{ stage.nameStage }}</td>
            </tr>
            <tr>
                <th>Duration</th>
