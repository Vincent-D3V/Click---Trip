{% extends 'base.html.twig' %}

{% block body %}
    <h3>Modification du profil</h3>
    <div class="container" id="padding-for-navbar">
        {{ form_start(form) }}

        {{ form_row(form.nameAgent, {'label': 'Nom ', 'attr' :{'placeholder':"Entrez votre Nom de famille... " }}) }}
        {{ form_row(form.surnameAgent, {'label': 'Prénom', 'attr' :{'placeholder':"Entrez votre Prénom... " }}) }}
        {{ form_row(form.email, {'label': 'Email','attr' :{'placeholder':"Entrez votre email..." }}) }}
        {{ form_row(form.address, {'label': 'adresse', 'attr' :{'placeholder':"Entrez votre adresse... " }}) }}
        {{ form_row(form.country, {'label': 'Pays ', 'attr' :{'placeholder':"Entrez votre pays... " }}) }}
        {{ form_row(form.city, {'label': 'Ville ', 'attr' :{'placeholder':"Entrez votre  ville... " }}) }}
        {{ form_row(form.password, {'label': 'password','attr' :{'placeholder':"entrez votre mot de passe..." }}) }}
        {{ form_row(form.image, {'label': 'Image ', 'attr' :{'placeholder':"Entrez votre image..." }}) }}
        {{ form_row(form.company, {'label': "Nom de l'Agence ", 'attr' :{'placeholder':"Entrez le nom de l'agence... " }}) }}
        {{ form_row(form.imageFile, {'label': "Image ", 'attr' :{'placeholder':"Charger votre image... " }}) }}

        <button type="submit">Enregistrer les modifications   </button>
        {{ form_end(form) }}
    </div>

{% endblock %}